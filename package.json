{
  "name": "fse-parts-snippetor",
  "displayName": "FSE Parts Snippetor",
  "description": "特定のファイル内にある指定したクラスの子要素をスニペットに登録します。",
  "publisher": "xMarKun",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "workspaceContains:**/*.php"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "FSE Parts Snippetor",
      "properties": {
        "fsePartsSnippetor.targetClasses": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "ここに指定したクラスの子要素をスニペットに登録します。",
          "default": [
            "fse-parts-snippetor"
          ]
        },
        "fsePartsSnippetor.targetFilePath": {
          "type": "string",
          "description": "スニペットの登録を行うファイルのパスです。指定したファイルの保存時に自動的にスニペットが登録されます。（PHPファイルのみ）",
          "default": "demo/index.php"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "cheerio": "^1.0.0"
  }
}
